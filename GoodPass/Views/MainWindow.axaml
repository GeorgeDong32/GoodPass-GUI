<Window
    x:Class="GoodPass.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:GoodPass.Views"
    xmlns:vm="using:GoodPass.ViewModels"
    Title="GoodPass"
    d:DesignHeight="350"
    d:DesignWidth="600"
    Background="{DynamicResource AppBackground}"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/GoodPass.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="AppBackground">#eff4f9</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="AppBackground">#102147</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <views:MainView />
</Window>
